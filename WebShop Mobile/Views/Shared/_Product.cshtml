@model IEnumerable<WebShop_Mobile.Models.CellPhone>

@{
    var i = 0;
}


@foreach (var item in Model)
{
    var image = item.ProductCode;
    image.TrimEnd('+', ' ');
    image += ".jpg";


    <a href="/Product/Details/@item.Id">
        <div class="col-md-offset-1 col-md-2" id="@item.Name" style="width:100%">
            <div class="bg-primary" style="font-size:24px">@item.Name</div>

            <img class="img-thumbnail img-responsive" src="~/Content/Img/@image" alt="@item.Name" />  @*style="width:400px"*@

            <div class="bg-primary">@string.Format("Price: {0}kr", item.Price.ToString("N2"))</div>
        </div>
    </a>

    i++;
    if (i == 4)
    {
        <div class="col-md-12"><hr /></div>
        i = 0;
    }
}
