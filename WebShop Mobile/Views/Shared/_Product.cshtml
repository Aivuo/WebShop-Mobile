@model WebShop_Mobile.Models.CellPhone

@{
    var image = Model.ProductCode;
    image.TrimEnd('+', ' ');
    image += ".jpg";
}

    <a href="/Product/Details/@Model.Id" data-ajax-update="#MainBody" data-ajax-mode="replace" data-ajax="true">
        <div id="@Model.Name">
            <div class="bg-primary " style="font-size:24px">@Model.Name</div>

            <img class="img-responsive center-block" src="~/Content/Img/@image" alt="@Model.Name" />  @*style="width:400px"*@

            <div class="bg-primary text-center">@string.Format("Pris: {0}kr", Model.Price.ToString("N2"))</div>
            <div class="btn btn-sm btn-primary btn-block text-center">
                @Ajax.ActionLink("Lägg i Kundvagnen", "AddToCart", new {cellId=Model.Id},new AjaxOptions() {
                                    HttpMethod = "post",
                                    InsertionMode = InsertionMode.Replace,
                                    UpdateTargetId = "ProductList"}, new {@class = "text-light small" })
            </div>
        </div>
    </a>

