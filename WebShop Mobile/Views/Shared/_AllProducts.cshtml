@model WebShop_Mobile.Models.CellPhone

    <div id="@Model.Id" class="col-md-offset-1 col-md-5">
        <b style="font-size:16px">@Model.Name</b>
        <div>
            @Model.Developer <br />
            @Model.ProductCode <br />
            @Model.ReleaseYear <br />
        </div>
        <div style="font-size:12px">@string.Format("Pris: {0}kr", Model.Price.ToString("N2"))</div>
      
        @Html.ActionLink("Detaljer", "Details","Product", new {id=Model.Id }, null) |
        @Html.ActionLink("Ändra", "Edit", new { id=Model.Id})

    </div>