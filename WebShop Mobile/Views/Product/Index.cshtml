@model IEnumerable<WebShop_Mobile.Models.CellPhone>

@{
    ViewBag.Title = "Product List";
    var i = 0;
}
<div class="row">
    @*<div class="col-md-12"><hr /></div>*@
    <hr />
</div>
<div class="row" id="ProductList" style="display:block">
    @foreach (var item in Model)
    {
        <div class="col-md-offset-1 col-md-2">
            @Html.Partial("_Product", item)
        </div>
    
    i++;
    if (i == 4)
    {
        <div class="col-md-12"><hr /></div>
        i = 0;
    }
    }
</div>


