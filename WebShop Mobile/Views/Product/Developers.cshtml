@model IEnumerable<string>
@{
    ViewBag.Title = "Developers";
    var i = 0;
}

<h2>Developers</h2>

@foreach (var item in Model)
{
    var image = item + ".jpg";

    <a href="/Product/Index?Developers=@item">
        <div class="col-md-offset-1 col-md-2">
            <img src="~/Content/Img/Developers/@image" class="img-thumbnail img-responsive" alt="@item" />
            <div class="bg-primary">@item</div>
        </div>
    </a>

    i++;
    if (i == 4)
    {
        <div class="col-md-12"><hr /></div>
    }
}

